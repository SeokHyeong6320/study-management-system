    <select id="selectListCount" resultType="long">
        select count(*)
        from banner
        where 1 = 1

    </select>

    <select id="selectList" resultType="com.zerobase.fastlms.aahomework.BannerDto" resultMap="bannerRM">
        select *
        from banner
        where 1 = 1


        limit #{pageStart}, #{pageEnd}
    </select>

